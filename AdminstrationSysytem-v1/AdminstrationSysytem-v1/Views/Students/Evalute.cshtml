@model IEnumerable<AdminstrationSysytem_v1.Models.Instructor_Corse_InDepartment>

@{
    ViewBag.Title = "Evalute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Evalute</h2>

@section OptionalScripts{
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
<link href="~/Content/Star-Style.css" rel="stylesheet" />
    
<script src="~/Scripts/Star-Dierctive.js"></script>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <table class="table" ng-app="app" ng-controller="RatingController as rating" class="container" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseStatues)
            </th>
            <th>
                @Html.DisplayName("Evaluation")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instructor.Name)
                </td>
                <td>
                    @if (item.CourseStatues == 1)
                    {
                        <p>Done</p>
                    }
                    else
                    {
                        <p>OnProgress</p>
                    }
                </td>
                <td>
                    <div >
                        <div star-rating ng-model="rating.rating"+'1'" max="10" on-rating-select="rating.rateFunction(rating)"></div>
                    </div>
                </td>

            </tr>
        }

        </table>

