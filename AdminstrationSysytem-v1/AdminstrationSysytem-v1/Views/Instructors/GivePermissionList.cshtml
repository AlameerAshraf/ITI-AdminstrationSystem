@model IEnumerable<AdminstrationSysytem_v1.Models.AttendanceModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayName("Give Permission For"+" "+DateTime.Now.ToString("dd/MM/yyyy"))
        </th>
        <th>
            @Html.DisplayName("Permissions Number")
        </th>
        <th>
            @Html.DisplayName("Total Grade")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @if (item.IsPermitted == true)
            {
                <input type="checkbox" name="@item.name" value="@item.name" checked="checked" />
            }
            else
            {
                <input type="checkbox" name="@item.name" value="@item.name" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfPermissions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradeOfAbsence)
        </td>
    </tr>
}

</table>
